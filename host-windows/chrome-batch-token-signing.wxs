"%WIX%\bin\light.exe" -out chrome-batch-token-signing.msi chrome-batch-token-signing.wixobj -v -ext WixUIExtension
    -dWixUILicenseRtf=LICENSE.LGPL.rtf
    -dWixUIDialogBmp=dlgbmp.bmp
